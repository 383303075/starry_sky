<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.IVideoDao">
    <select id="findByPage" parameterType="java.util.Map" resultType="domain.Video">
        select * from  videos
        <where>
            <if test="name!=null">
                v_name like concat('%',#{name},'%') or v_id like concat('%',#{name},'%')
            </if>
        </where>
        limit  #{start},#{end}
    </select>

    <select id="findById" parameterType="java.util.Map" resultType="domain.Video">
        select  * from   videos where v_id = #{v_id}
    </select>

    <!--根据视频名称查找数据-->
    <select id="getRowsCount" parameterType="java.util.Map" resultType="int">
        select COUNT(*) FROM videos
        <where>
            <if test="v_name!=null">
                name like concat('%',#{v_name},'%')
            </if>
        </where>
    </select>

    <!--增加单条数据-->
    <insert id="insert" parameterType="java.util.Map">
        insert into admins
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="a_id != null">
                a_id,
            </if>
            <if test="a_name != null">
                a_name,
            </if>
            <if test="a_password != null">
                a_password,
            </if>
            <if test="a_grant != null">
                a_grant,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="a_id != null">
                #{a_id,jdbcType=VARCHAR},
            </if>
            <if test="a_name != null">
                #{a_name,jdbcType=VARCHAR},
            </if>
            <if test="a_password != null">
                #{a_password,jdbcType=VARCHAR},
            </if>
            <if test="a_grant != null">
                #{a_grant,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <!--单条删除-->
    <delete id="deleteOne" parameterType="java.lang.String">
        delete from videos
        <where>
            v_id=#{v_id}
        </where>
    </delete>

    <!--批量删除-->
    <delete id="batchDelete" parameterType="java.lang.String">
        delete from videos
        <where>
            <foreach collection="list" item="v_id" separator="," open="v_id in (" close=")" >
                #{v_id}
            </foreach>
        </where>
    </delete>
    <update id="updateRow" parameterType="java.util.Map">
        update videos
        <trim prefix="set" suffixOverrides="," suffix="where v_id = #{v_id}">
            <if test="v_name != null">
                v_name = #{v_name},
            </if>
            <if test="v_type != null">
                v_type = #{v_type},
            </if>
            <if test="v_authorid != null">
                v_authorid = #{v_authorid},
            </if>
            <if test="v_description != null">
                v_description = #{v_description},
            </if>
            <if test="v_click != null">
                v_click = #{v_click},
            </if>
            <if test="v_date != null">
                v_date = #{v_date},
            </if>
            <if test="v_image != null">
                v_image = #{v_image},
            </if>
            <if test="v_praise != null">
                v_praise = #{v_praise},
            </if>
            <if test="v_checkerid != null">
                v_checkerid = #{v_checkerid},
            </if>
            <if test="v_pass != null">
                v_pass = #{v_pass},
            </if>
            <if test="v_route != null">
                v_route  = #{v_route },
            </if>
            <if test="v_number != null">
                v_number  = #{v_number },
            </if>
            <if test="v_tv != null">
                v_tv  = #{v_tv },
            </if>
        </trim>
    </update>
</mapper>
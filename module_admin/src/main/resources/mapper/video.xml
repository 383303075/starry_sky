<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dao.IVideoDao">
    <select id="findByPage" parameterType="java.util.Map" resultType="domain.Video">
        select  * from   videos
        <where>
            <if test="v_name!=null">
                name like concat('%',#{a_name},'%')
            </if>
        </where>
        limit  #{start},#{end}
    </select>

    <select id="findById" parameterType="java.util.Map" resultType="domain.Video">
        select  * from   videos where v_id = #{v_id}
    </select>

    <select id="getRowsCount" parameterType="java.util.Map" resultType="int">
        select COUNT(*) FROM admins
        <where>
            <if test="a_name!=null">
                name like concat('%',#{a_name},'%')
            </if>
        </where>
    </select>

    <!--增加单条数据-->
    <insert id="insert" parameterType="java.util.Map">
        insert into admins
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="a_id != null">
                a_id,
            </if>
            <if test="a_name != null">
                a_name,
            </if>
            <if test="a_password != null">
                a_password,
            </if>
            <if test="a_grant != null">
                a_grant,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="a_id != null">
                #{a_id,jdbcType=VARCHAR},
            </if>
            <if test="a_name != null">
                #{a_name,jdbcType=VARCHAR},
            </if>
            <if test="a_password != null">
                #{a_password,jdbcType=VARCHAR},
            </if>
            <if test="a_grant != null">
                #{a_grant,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <!--单条删除-->
    <delete id="deleteOne" parameterType="java.lang.String">
        delete from admins
        <where>
            a_id=#{a_id}
        </where>
    </delete>

    <!--批量删除-->
    <delete id="batchDelete" parameterType="java.lang.String">
        delete from admins
        <where>
            <foreach collection="list" item="a_id" separator="," open="a_id in (" close=")" >
                #{id}
            </foreach>
        </where>
    </delete>

</mapper>